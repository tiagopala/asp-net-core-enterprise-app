@model EnterpriseApp.WebApp.MVC.Models.OrderTransactionViewModel

<h4 class="card-title">Address</h4>
@{
    if (Model.Address is null)
    {
        <div class="text-left">
            <a href="javascript:void(0)" class="btn btn-primary float-md-left" data-toggle="modal" data-target="#enderecoModal"> <i class="fa fa-location-arrow"></i> Add Address</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-9 text-left">
                @Model.Address.ToString()
            </div>
            <div class="col-3 text-right">
                <a href="javascript:void(0)" class="btn btn-primary float-md-right"> <i class="fa fa-location-arrow"></i> Change Address</a>
            </div>
        </div>
    }
}