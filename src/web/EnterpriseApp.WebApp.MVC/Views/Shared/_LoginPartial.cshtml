@using EnterpriseApp.WebApp.MVC.Extensions
@inject IUser AppUser

@if (AppUser.IsAuthenticated())
{
    <div class="dropdown d-inline-block">
        <a href="#" class="icontext dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <img class="icon icon-sm rounded-circle">
        </a> <!-- iconbox // -->
        <div class="dropdown-menu dropdown-menu-left" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 12px; left: 91px; transform: translate3d(150px, 32px, 0px);">
            <a class="dropdown-item" href="#">My Profile</a>
            <a class="dropdown-item" href="#">My Orders</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Logout</a>
        </div>
    </div>
}
else
{
    <div class="widget-header">
        <small class="title text-muted">Welcome!</small>
        <div>
            <a asp-controller="Auth" asp-action="Register">SignUp</a> <span> | </span>
            <a asp-controller="Auth" asp-action="Login"> Login</a>
        </div>
    </div>
}