@using EnterpriseApp.WebApp.MVC.Extensions
@model PagedViewModel<EnterpriseApp.WebApp.MVC.Models.ProductViewModel>

@{
    ViewData["Title"] = "All the products";
}

<section>
    <div>
        <div style="background-image: url(images/banners/Template.jpg); height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover">
            <div style="text-align: center;">
                <img src="~/images/banners/nerdstore.png" />
            </div>
        </div>
        <div class="container" style=" padding-top: 20px">
            <div class="row">
                @{
                    foreach (var product in Model.List.OrderBy(p => p.Name))
                    {
                        <div class="col-md-3">
                            <div href="#" class="card card-product-grid">
                                <a asp-controller="Catalog" asp-action="ProductDetails" asp-route-id="@product.Id" class="img-wrap">
                                    <img src="~/images/produtos/@product.Image" alt="@product.Name">
                                </a>
                                <figcaption class="info-wrap">
                                    <a asp-controller="Catalog" asp-action="ProductDetails" asp-route-id="@product.Id" class="title">
                                        <b> @product.Name</b>
                                    </a>

                                    <small class="card-text">
                                        @this.StockMessage(product.StockQuantity)<br /><br />
                                        @product.Description
                                    </small>
                                </figcaption>
                                <div class="card-footer price mt-1">
                                    <h3>@this.FormatCurrency(@product.Price)</h3>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <nav>
                <ul class="pagination justify-content-center">
                    @{
                        for (var i = 1; i < Model.TotalPages + 1; i++)
                        {
                            if (i == Model.PageIndex)
                            {
                                <li class="page-item active">
                                    <a class="page-link" asp-action="@Model.ReferenceAction" asp-route-pageIndex="@i" asp-route-pageSize="@Model.PageSize" asp-route-query="@Model.Query">@i <span class="sr-only">(current)</span></a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" asp-action="@Model.ReferenceAction" asp-route-pageSize="@Model.PageSize" asp-route-pageIndex="@i" asp-route-query="@Model.Query">@i</a></li>
                            }
                        }
                    }
                </ul>
            </nav>
        </div>
    </div>
</section>